<div class="container">
  <%= image_tag (@flat.picture), class: "img-responsive"%>
  <h1><%= @flat.name %></h1>
  <p><strong>Address:</strong> <%= @flat.address %></p>
  <p><strong>Description:</strong> <%= @flat.description %></p>
  <p><strong>Price per night:</strong> <%= @flat.price_per_night %></p>
  <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>
  <%= link_to "Back to overview", flats_path %>
  <%= link_to "Edit flat", edit_flat_path(@flat), class: "text-warning pl-3" %>
  <%= link_to "Remove", flat_path(@flat), method: :delete, class: "text-danger pl-3" %>
</div>
