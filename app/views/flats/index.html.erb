<div class="myheader d-flex justify-content-between">
<h3 class="ml-3 mt-2">Simple Airbnb</h3>
<a href="flats/new" class="btn btn-outline-primary m-3">Add flat</a>
</div>

<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row row-cols-4">
    <% @flats.each do |flat| %>
      <div class="mycard col">
        <div class="mycard-top">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <p>
          <i class="tiny material-icons">people</i>
          <%= flat.number_of_guests %>
          <i class="fa fa-euro-sign"></i>
          <%= flat.price_per_night %>
          </p>
        </div>
        <div class="mycard-bottom">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class: "text-warning pl-1" %>
          <%= link_to "Delete", flat_path(flat), method: :delete, class: "text-danger pl-1" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
