<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>

  <div class="row row-cols-4">
    <% @flats.each do |flat| %>
      <div class="mycard col">
        <div class="mycard-top">
          <%= image_tag (flat.picture), class: "img-responsive"%>
        </div>
        <div class="mycard-top">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <p>
          <i class="tiny material-icons">people</i>
          <%= flat.number_of_guests %>
          <i class="fa fa-euro-sign"></i>
          <%= flat.price_per_night %>
          </p>
        </div>
        <div class="mycard-bottom">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class: "text-warning pl-1" %>
          <%= link_to "Remove", flat_path(flat), method: :delete, class: "text-danger pl-1" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
